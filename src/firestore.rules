rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read public user profiles to find people to invite,
    // but can only write to their own user document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // To access anything inside a workspace (boards, groups, tasks, comments),
    // the user must be a member of that workspace.
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
  }
}