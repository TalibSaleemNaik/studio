
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for workspace membership
    function isWorkspaceMember(workspaceId) {
      return request.auth != null && get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members[request.auth.uid] != null;
    }

    // Users can only be created by anyone (for signup), but can only be read/updated by themselves.
    // The list of users can be read by any authenticated user to allow searching for invites.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // All documents within a workspace (boards, groups, tasks, comments, etc.)
    // can be read or written to only by members of that workspace.
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if isWorkspaceMember(workspaceId);
    }
  }
}
