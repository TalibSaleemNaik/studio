
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for workspace membership
    function isWorkspaceMember(workspaceId) {
      return get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members[request.auth.uid] != null;
    }

    // Users can only read their own data, but can be read by others for invites
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Secure the entire workspace and all its subcollections
    // A user has access if they are a member of the parent workspace.
    match /workspaces/{workspaceId}/{document=**} {
        allow read, write: if isWorkspaceMember(workspaceId);
    }
  }
}

    