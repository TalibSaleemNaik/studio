
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for workspace membership
    function isWorkspaceMember(workspaceId) {
      return get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members[request.auth.uid] != null;
    }

    // Users can read public profiles, but only write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow full read/write access to a workspace and all its sub-collections
    // if the user is a member of that workspace.
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if isWorkspaceMember(workspaceId);
    }
  }
}
