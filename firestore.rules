
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read the users collection and write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Any authenticated user can read or write within any workspace.
    // The application logic is responsible for showing users only the
    // boards and tasks they are members of.
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
