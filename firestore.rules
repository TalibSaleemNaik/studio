rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read public user profiles (for invites) but only write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // A user can access anything within a workspace if they are a member of that workspace.
    // This rule recursively applies to all subcollections (boards, groups, tasks, comments, etc.).
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members[request.auth.uid] != null;
    }
  }
}
