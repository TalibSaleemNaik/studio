rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /workspaces/{workspaceId} {
      allow get: if request.auth != null;
    }

    match /workspaces/{workspaceId}/boards/{boardId}/{document=**} {
      allow read, write, delete: if request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)/boards/$(boardId)).data.members;
    }
  }
}