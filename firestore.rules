rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read their own profile, but anyone can create a user doc (on signup)
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // A user can read/write to a workspace and all its sub-collections (boards, groups, tasks)
    // if their UID is in the `members` map of that workspace.
    match /workspaces/{workspaceId}/{document=**} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.members;
    }
  }
}